          h1 {
              text-align: center;
              color: #333333;
          }
  
          .current-weather {
              margin-top: 20px;
              padding: 10px;
              border: 2px solid #007bff;
              border-radius: 8px;
          }
  
          .current-weather p {
              font-size: 18px;
              margin-bottom: 10px;
              line-height: 1.5;
          }
  
          .current-weather p strong {
              color: #007bff;
          }
  
          .menu {
              text-align: center;
              margin-top: 20px;
